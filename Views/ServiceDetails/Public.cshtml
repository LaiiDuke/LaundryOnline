@model IEnumerable<LaundryV3.Models.ServiceDetail>

@{
    ViewBag.Title = "Pricings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-5 pb-3">
    <div class="container">
        <h6 class="text-secondary text-uppercase text-center font-weight-medium mb-3">Our Pricing Plan</h6>
        <h1 class="display-4 text-center mb-5">The Best Price</h1>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 mb-4">
                    <div class="bg-light text-center mb-2 pt-4">
                        <div class="d-inline-flex flex-column align-items-center justify-content-center bg-secondary rounded-circle shadow mt-2 mb-4" style="width: 200px; height: 200px; border: 15px solid #ffffff;">
                            <h3 >@Html.DisplayFor(modelItem => item.Name)</h3>
                            <h1 class="display-4 mb-0">
                                <small class="align-top" style="font-size: 22px; line-height: 45px;">@Html.DisplayFor(modelItem => item.ServiceLaundry.Name) </small>@Html.DisplayFor(modelItem => item.Price)<small class="align-bottom" style="font-size: 16px; line-height: 40px;">VNĐ</small>
                            </h1>
                        </div>
                        <div class="d-flex flex-column align-items-center py-3">
                            <p>@Html.DisplayFor(modelItem => item.Description)</p>
                        </div>
                        <a href="" class="btn btn-secondary py-2 px-4">Signup Now</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<h2>Pricings</h2>

<table class="table">
    <tr>
        <th>
            Service
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceLaundry.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>
